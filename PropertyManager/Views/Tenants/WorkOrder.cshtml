@model PropertyManager.Models.WorkOrder

@{
    ViewData["Title"] = "WorkOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>WorkOrder</h1>
<p>
    Please separate different issues into different work orders
</p>

<h4>WorkOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WorkOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Issue" class="control-label">Please type the issue you are having</label>
                <textarea asp-for="Issue" class="form-control" rows="5" placeholder="Type Here"></textarea>
                <span asp-validation-for="Issue" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
